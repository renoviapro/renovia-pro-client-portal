# Nginx client.renoviapro.fr
server {
    listen 80;
    server_name client.renoviapro.fr;
    return 301 https://$server_name$request_uri;
}
server {
    listen 443 ssl http2;
    server_name client.renoviapro.fr;
    ssl_certificate     /etc/letsencrypt/live/client.renoviapro.fr/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/client.renoviapro.fr/privkey.pem;
    root /var/www/client-portal/frontend/dist;
    index index.html;
    location / { try_files $uri $uri/ /index.html; }
    location /api/ {
        proxy_pass http://127.0.0.1:8001/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        client_max_body_size 20M;
    }
}
